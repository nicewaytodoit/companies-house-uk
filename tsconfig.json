{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "outDir": "./lib",
        "strict": true,
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "sourceMap": true,
        "removeComments": true,
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "downlevelIteration": true
    },
    "include": [
        "src",
        "src/custom.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}